%% Dimensions de l'horloge
%% x : -11mm à 11mm
%% y : -11mm à 15.5mm
\newcommand{\horloge}
{
\begin{tikzpicture}
\begin{scope}[scale=0.2]

%% Deux cercles concentriques pour les contours de l'horloge
\fill[color=MidnightBlue] (0,0) circle (11mm) ;
\fill[color=white] (0,0) circle (10mm) ;
%% Cercle au milieu de l'horloge (fixation des deux aiguilles)
\fill[black] (0,0) circle (0.5mm);

%% Douze petits traits pour les heures
\foreach \y in {0,30,...,330} {
	\begin{scope}[rotate=\y]
		\draw[color=NavyBlue] (0.75,0) -- (0.90,0) ;
	\end{scope}	
}

%% La grange aiguille
\draw (0,0) -- (0.65,0);

%% La petit aiguille
\begin{scope}[rotate=30]
	\draw (0,0) -- (0.40,0);
\end{scope}

%% Le dessus de l'horloge
\begin{scope}[yshift=13mm]
	\fill[color=MidnightBlue] (0,0) circle (2.5mm);
\end{scope}

\end{scope}
\end{tikzpicture}
}

%% Dimensions des couverts (fourchette et cuillère)
%% x : -9mm à 9.35mm
%% y : -11mm à 17mm
\newcommand{\couverts}
{
\begin{tikzpicture}
\begin{scope}[scale=0.2]

%% fourchette
\begin{scope}[xshift=-5mm]
	\draw[line width = 0.4mm,color=MidnightBlue] (0,-1.1) -- (0,1.55);
	\fill[color=MidnightBlue] (0,0.2) -- (-0.45 - 0.035,0.9) -- (0.45 + 0.035,0.9) -- cycle;
	\fill[color=MidnightBlue] (-0.50,0.9) arc (180:360:0.50);
	\draw[line width = 0.4mm,color=MidnightBlue] (-0.4,0.9) -- (-0.4,1.55);
	\draw[line width = 0.4mm,color=MidnightBlue] (0.4,0.9) -- (0.4,1.55);
\end{scope}

%% cuillère
\begin{scope}[xshift=5mm]
	\draw[line width = 0.4mm,color=MidnightBlue] (0,-1.1) -- (0,1.55);
	\fill[color=MidnightBlue] (0,0.9) circle (0.435);
	\fill[color=MidnightBlue] (0.435,0.9) -- (-0.435,0.9) arc (180:135:0.870) -- cycle;
	\fill[color=MidnightBlue] (-0.435,0.9) -- (0.435,0.9) arc (0:45:0.870) -- cycle;
	\fill[color=MidnightBlue] (0,0.9+0.435) circle (0.5858*0.435);
\end{scope}

\end{scope}
\end{tikzpicture}
}

%% Dimensions du four
%% x : -13mm à 13mm
%% y : -13mm à 13mm
\newcommand{\four}
{
\begin{tikzpicture}
\begin{scope}[scale=0.2]

	\draw[line width = 0.3mm,color=MidnightBlue] (-1.3,-1.3) rectangle (1.3,1.3);
	
	%% partie haute du four
	\fill[color=MidnightBlue] (-1,0.75) rectangle (-0.8,1.05);
	
	\foreach \y in {0,1,...,3} {
	\begin{scope}[xshift=\y*0.45cm]
		\fill[color=MidnightBlue] (-0.425,0.9) circle (0.15);
	\end{scope}
	}
	
	%% partie basse du four
	\begin{scope}[yshift=1.5mm]
	
	\fill[color=MidnightBlue] (-1.1,-1.1) rectangle (1.1,0.3);
	
	\fill[color=white] (-1.1,-1.1) rectangle (-0.8,-0.8);
	\fill[color=MidnightBlue] (-0.8,-0.8) circle (0.3);
	
	\fill[color=white] (1.1,0.3) rectangle (0.8,0);
	\fill[color=MidnightBlue] (0.8,0) circle (0.3);
	
	\fill[color=white] (1.1,-1.1) rectangle (0.8,-0.8);
	\fill[color=MidnightBlue] (0.8,-0.8) circle (0.3);
	
	\fill[color=white] (-1.1,0.3) rectangle (-0.8,0);
  \fill[color=MidnightBlue] (-0.8,0) circle (0.3);
	
	\fill[color=white] (-0.7,-0.1) rectangle (0.7,0.1);
	
	\end{scope}
	
\end{scope}
\end{tikzpicture}
}

